{
  "name": "universal-repo-mapper",
  "version": "1.0.0",
  "description": "Universal repository mapper tool using tree-sitter for any programming language",
  "main": "universal-repo-mapper.js",
  "scripts": {
    "start": "node universal-repo-mapper.js",
    "install-deps": "node universal-repo-mapper.js --install-deps",
    "install-all-langs": "node universal-repo-mapper.js --install-deps --install-all-langs"
  },
  "bin": {
    "repomap": "./universal-repo-mapper.js"
  },
  "dependencies": {
    "commander": "^9.0.0",
    "tree-sitter": "^0.20.0"
  },
  "optionalDependencies": {
    "tree-sitter-typescript": "^0.20.0",
    "tree-sitter-javascript": "^0.19.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/universal-repo-mapper.git"
  },
  "keywords": [
    "codebase",
    "visualization",
    "repository",
    "mapping",
    "tree-sitter",
    "static-analysis"
  ],
  "author": "",
  "license": "MIT"
}